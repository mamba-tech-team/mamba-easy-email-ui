    "easy-email-pro-core": "^1.51.8",
    "easy-email-pro-editor": "^1.51.8",
    "easy-email-pro-kit": "^1.51.8",
    "easy-email-pro-theme": "^1.51.8",
    "easy-localized-translation": "^1.1.0",
